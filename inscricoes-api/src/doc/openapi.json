{
  "openapi": "3.0.3",
  "info": {
    "title": "Inscrições API",
    "description": "API de Autenticação de Inscrições para o trabalho final de Arquitetura de Software - 2024A",
    "contact": {
      "email": "fernando.filter@universo.univates.br"
    },
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "inscricoes",
      "description": "Tudo sobre as inscrições"
    }
  ],
  "paths": {
    "/inscricoes/{id}": {
      "get": {
        "tags": [
          "inscricoes"
        ],
        "summary": "Busca uma inscrição pelo ID",
        "description": "Multiple status values can be provided with comma separated strings",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da Inscrição",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Inscricao"
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "delete": {
        "tags": [
          "inscricoes"
        ],
        "summary": "Deleta uma inscrição",
        "description": "Multiple status values can be provided with comma separated strings",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da Inscrição",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Invalid status value"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/inscricoes/usuario/{id}": {
      "get": {
        "tags": [
          "inscricoes"
        ],
        "summary": "Busca todas as inscrições de um Usuário",
        "description": "Multiple status values can be provided with comma separated strings",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do Usuário",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Inscricao"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/inscricoes/confirm": {
      "put": {
        "tags": [
          "inscricoes"
        ],
        "summary": "Muda o status da Inscrição para Confirmado",
        "description": "Multiple status values can be provided with comma separated strings",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Inscricao"
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/inscricoes/checkIn": {
      "put": {
        "tags": [
          "inscricoes"
        ],
        "summary": "Muda o status da Inscrição para Check In",
        "description": "Multiple status values can be provided with comma separated strings",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Inscricao"
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/inscricoes/cancel": {
      "put": {
        "tags": [
          "inscricoes"
        ],
        "summary": "Muda o status da Inscrição para Cancelado",
        "description": "Multiple status values can be provided with comma separated strings",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Inscricao"
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Inscricao": {
        "required": [
          "id_evento",
          "id_usuario"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "id_evento": {
            "type": "integer",
            "example": 2
          },
          "id_usuario": {
            "type": "integer",
            "example": 3
          },
          "data_hora": {
            "type": "string",
            "example": "2024-03-01T20:30:00.000Z"
          },
          "status": {
            "type": "integer",
            "enum": [
              0,
              1,
              2,
              3
            ]
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "Token de autorização não fornecido ou no formato inválido"
      }
    }
  }
}